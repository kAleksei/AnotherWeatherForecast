{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Information"
      }
    }
  },
  "OpenTelemetry": {
    "ServiceName": "WeatherForecast.Api",
    "ServiceVersion": "1.0.0-dev",
    "OtlpEndpoint": ""
  },
  "WeatherSources": {
    "OpenMeteo": {
      "BaseUrl": "https://api.open-meteo.com",
      "TimeoutSeconds": 5,
      "CacheDurationMinutes": 15
    },
    "WeatherAPI": {
      "BaseUrl": "https://api.weatherapi.com",
      "ApiKey": "",
      "TimeoutSeconds": 5,
      "CacheDurationMinutes": 15
    },
    "OpenWeatherMap": {
      "BaseUrl": "https://api.openweathermap.org",
      "ApiKey": "",
      "TimeoutSeconds": 5,
      "CacheDurationMinutes": 15
    }
  }
}
